{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": ["ESNext", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "@/*": ["./src/*"],
      "@assets/*": ["./src/shared/assets/*"],
//      "@cmp/*": ["./src/shared/cmp/*"],
//      "@stores/*": ["./src/shared/stores/*"],
//      "@use/*": ["./src/shared/use/*"]
    }

  },
  "include": ["src"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
